<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SSFlightLegCalc.ViewModels"
             x:Class="SSFlightLegCalc.MainPage"
             Title="Flight Leg Calculator">

    <ContentPage.BindingContext>
        <vm:MainViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <!-- Input Section -->
            <Label Text="Input" FontSize="20" FontAttributes="Bold" />

            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                  ColumnSpacing="12" RowSpacing="8">

                <Label Grid.Row="0" Grid.Column="0" Text="Track (°)" VerticalOptions="Center" />
                <Entry x:Name="EntryTrack" Grid.Row="0" Grid.Column="1" Text="{Binding Track}"
                       Keyboard="Numeric" Placeholder="0–360"
                       ReturnType="Next" Completed="OnEntryCompleted" />

                <Label Grid.Row="1" Grid.Column="0" Text="TAS (kt)" VerticalOptions="Center" />
                <Entry x:Name="EntryTAS" Grid.Row="1" Grid.Column="1" Text="{Binding TAS}"
                       Keyboard="Numeric" Placeholder="e.g. 120"
                       ReturnType="Next" Completed="OnEntryCompleted" />

                <Label Grid.Row="2" Grid.Column="0" Text="Wind Dir (°)" VerticalOptions="Center" />
                <Entry x:Name="EntryWindDir" Grid.Row="2" Grid.Column="1" Text="{Binding WindDirection}"
                       Keyboard="Numeric" Placeholder="0–360"
                       ReturnType="Next" Completed="OnEntryCompleted" />

                <Label Grid.Row="3" Grid.Column="0" Text="Wind Spd (kt)" VerticalOptions="Center" />
                <Entry x:Name="EntryWindSpd" Grid.Row="3" Grid.Column="1" Text="{Binding WindSpeed}"
                       Keyboard="Numeric" Placeholder="e.g. 20"
                       ReturnType="Next" Completed="OnEntryCompleted" />

                <Label Grid.Row="4" Grid.Column="0" Text="Distance (NM)" VerticalOptions="Center" />
                <Entry x:Name="EntryDistance" Grid.Row="4" Grid.Column="1" Text="{Binding Distance}"
                       Keyboard="Numeric" Placeholder="e.g. 50"
                       ReturnType="Done" Completed="OnLastEntryCompleted" />
            </Grid>

            <!-- Calculate Button -->
            <Button Text="Calculate" Command="{Binding CalculateCommand}"
                    Clicked="OnCalculateClicked"
                    FontAttributes="Bold"
                    Margin="0,8,0,0" />

            <!-- Error Message -->
            <Label Text="{Binding ErrorMessage}" TextColor="Red" FontAttributes="Bold"
                   IsVisible="{Binding HasError}" />

            <!-- Output Section -->
            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto"
                  ColumnSpacing="12" RowSpacing="8" Margin="0,8,0,0">

                <Label Grid.Row="0" Grid.Column="0" Text="WCA:" FontAttributes="Bold" FontSize="18" />
                <Label Grid.Row="0" Grid.Column="1" Text="{Binding WCA}" FontSize="18" />

                <Label Grid.Row="1" Grid.Column="0" Text="Heading:" FontAttributes="Bold" FontSize="18" />
                <Label Grid.Row="1" Grid.Column="1" Text="{Binding Heading}" FontSize="18" />

                <Label Grid.Row="2" Grid.Column="0" Text="Ground Speed:" FontAttributes="Bold" FontSize="18" />
                <Label Grid.Row="2" Grid.Column="1" Text="{Binding GroundSpeed}" FontSize="18" />

                <Label Grid.Row="3" Grid.Column="0" Text="Leg Time (hh:mm):" FontAttributes="Bold" FontSize="18" />
                <Label Grid.Row="3" Grid.Column="1" Text="{Binding LegTime}" FontSize="18" />
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
